<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moranav.hungry.HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/personal_area"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:text="איזור אישי"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/main_ResList"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:text="רשימת מסעדות"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/edit_Res"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:text="ערוך מסעדה"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/main_addRes"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:text="הוסף מסעדה"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
